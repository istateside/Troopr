<form class="new-post-form">
  <div class="input-group" id="title-div">
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      placeholder="Enter title..">
  </div>
	
  <div class="input-group" id="body-div">
    <label for="body">Body</label>
    <textarea
      name="body"
      id="body"
      placeholder="Real cool description, nerd."></textarea>
  </div>

  <button type="submit">Submit post!</button>
</form>