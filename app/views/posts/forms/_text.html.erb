<form action="<%= blog_posts_url(current_blog) %>" method="POST">
  <%= auth_token %>
  <div class="input-group" id="title-div">
    <label for="title">Title</label>
    <input
      type="text"
      name="post[title]"
      id="title"
      value="<%= @post.title %>"
      placeholder="Enter title..">
  </div>
  <div class="input-group" id="body-div">
    <label for="body">Body</label>
    <textarea
      name="post[body]"
      id="body"
      value="<%= @post.title %>"
      placeholder="Real cool description, nerd."></textarea>
  </div>

  <button type="submit">Submit post!</button>
</form>
